{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:push": "prisma db push --schema ./prisma/schema",
    "db:migrate": "./scripts/migrate.sh",
    "db:migrate:prod": "./scripts/migrate-prod.sh",
    "db:reset": "./scripts/reset-db.sh",
    "db:seed": "bun run prisma/seed.ts",
    "db:studio": "prisma studio --schema ./prisma/schema",
    "db:generate": "prisma generate --schema ./prisma/schema"
  },
  "prisma": {
    "schema": "./schema"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "zod": "^3.25.16",
    "@orpc/server": "^1.2.0",
    "@orpc/client": "^1.2.0",
    "hono": "^4.7.6",
    "@prisma/client": "^6.7.0",
    "@prisma/extension-accelerate": "^1.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "prisma": "^6.8.2",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2"
  }
}
